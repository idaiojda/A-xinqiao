<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>  <!-- Allow emulator access -->
        <domain includeSubdomains="true">192.168.x.x</domain>  <!-- Allow LAN IP (physical device debugging) -->
    </domain-config>
</network-security-config>