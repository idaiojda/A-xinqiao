<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!-- 顶部导航栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:tint="#30B4FF"
            android:contentDescription="返回"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="视频列表"
            android:textColor="#222222"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- 顶部课程封面图片 -->
    <ImageView
        android:id="@+id/iv_video_list_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_video_list_icon"
        android:background="@drawable/bg_round_image"
        android:layout_marginBottom="8dp"/>

    <!-- tab栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="简 介"
            android:textColor="#30B4FF"
            android:textSize="16sp"
            android:background="@drawable/bg_tab_left_selector"/>

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="视 频"
            android:textColor="#222222"
            android:textSize="16sp"
            android:background="@drawable/bg_tab_right_selector"/>
    </LinearLayout>

    <!-- 内容区块 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <!-- 简介区块 -->
        <ScrollView
            android:id="@+id/sv_chapter_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:visibility="visible"
            android:clipToPadding="false"
            android:padding="16dp">
            <TextView
                android:id="@+id/tv_chapter_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:text="本章简介"
                android:textColor="#333333"
                android:textSize="15sp" />
        </ScrollView>

        <!-- 视频列表区块 -->
        <ListView
            android:id="@+id/lv_video_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:divider="#E4E4E4"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:padding="8dp"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>