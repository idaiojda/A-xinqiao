<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 搜索框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_search"
        android:layout_margin="16dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:tint="#BBBBBB"
            android:contentDescription="搜索"/>
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="搜索测评"
            android:textColor="#222222"
            android:textColorHint="#BBBBBB"
            android:textSize="16sp"
            android:padding="0dp"
            android:singleLine="true"/>
    </LinearLayout>

    <!-- banner区块 -->
    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_7"
        android:background="@drawable/bg_round_image"
        android:contentDescription="banner"/>

    <!-- 分类icon区块（横向可滑动，超出5项可滑动查看） -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:scrollbars="none"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/ll_love">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/bt_love"
                    android:contentDescription="情感"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="情感"
                    android:textColor="#666666"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/ll_person">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/bt_person"
                    android:contentDescription="人际"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人际"
                    android:textColor="#666666"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/ll_character">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/bt_character"
                    android:contentDescription="性格"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性格"
                    android:textColor="#666666"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/ll_health">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/bt_health"
                    android:contentDescription="健康"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康"
                    android:textColor="#666666"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/ll_family">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/bt_family"
                    android:contentDescription="亲子"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亲子"
                    android:textColor="#666666"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/ll_ability">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/bt_ability"
                    android:contentDescription="能力"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="能力"
                    android:textColor="#666666"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/ll_profession">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/bt_profession"
                    android:contentDescription="职业"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职业"
                    android:textColor="#666666"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 每日推荐标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="每日推荐"
        android:textColor="#222222"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- 推荐宫格RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:overScrollMode="never"
        android:scrollbars="none"/>

    <!-- 换一换按钮 -->
    <TextView
        android:id="@+id/tv_change"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="换一换"
        android:textColor="#30B4FF"
        android:textSize="18sp"
        android:background="@android:color/transparent"/>

</LinearLayout> 