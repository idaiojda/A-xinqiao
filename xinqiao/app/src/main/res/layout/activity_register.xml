<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_gradient_bg"
    android:padding="24dp"
    tools:context=".activity.RegisterActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        android:tint="#667eea"
        android:contentDescription="返回"
        android:layout_marginTop="16dp"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 顶部装饰性圆圈 -->
    <View
        android:id="@+id/top_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"
        android:background="@drawable/circle_background"
        android:alpha="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 标题区域 -->
    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_background"
            android:padding="20dp"
            android:src="@drawable/ic_app_logo"
            android:contentDescription="应用Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/app_display_name"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/register_with_phone"
            android:textColor="#E0E0E0"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 可滑动注册卡片 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/title_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/register_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- 头像选择区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/avatar_border"
                        android:padding="3dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/default_avatar"
                            android:contentDescription="用户头像" />

                    </FrameLayout>

                    <Button
                        android:id="@+id/btn_select_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/avatar_selector_selector"
                        android:drawableStart="@drawable/ic_camera"
                        android:drawablePadding="8dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/select_avatar"
                        android:textColor="#667eea"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- 手机号输入框 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#667eea"
                    app:boxStrokeWidth="2dp"
                    app:hintTextColor="#667eea"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="#667eea">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_number_hint"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="#333333" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 昵称输入框 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#667eea"
                    app:boxStrokeWidth="2dp"
                    app:hintTextColor="#667eea"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="#667eea">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nickname"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#333333" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 密码输入框 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#667eea"
                    app:boxStrokeWidth="2dp"
                    app:hintTextColor="#667eea"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#667eea"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="#667eea">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="#333333" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 确认密码输入框 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#667eea"
                    app:boxStrokeWidth="2dp"
                    app:hintTextColor="#667eea"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#667eea"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="#667eea">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="#333333" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 注册按钮 -->
                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/login_button_selector"
                    android:text="@string/register"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

    <!-- 底部装饰性圆圈 -->
    <View
        android:id="@+id/bottom_circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="-75dp"
        android:layout_marginStart="-75dp"
        android:background="@drawable/circle_background"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>