<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="#00000000"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 左侧内容区 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 标题 -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCL-90 症状自评量表"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- 副标题 -->
            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注心理状况，远离心理亚健康"
                android:textColor="#999999"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- 标签、价格、人数 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- 免费标签 -->
                <TextView
                    android:id="@+id/tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:gravity="center"
                    android:text="免费"
                    android:textColor="#FF8C4B"
                    android:textSize="12sp"
                    android:background="@drawable/bg_tag_free"
                    android:layout_marginRight="6dp"/>

<!--                &lt;!&ndash; 原价 &ndash;&gt;-->
<!--                <TextView-->
<!--                    android:id="@+id/tv_price_old"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="19.90喜贝"-->
<!--                    android:textColor="#CCCCCC"-->
<!--                    android:textSize="12sp"-->
<!--                    android:layout_marginRight="6dp"/>-->

                <!-- 人数 -->
                <TextView
                    android:id="@+id/tv_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1099.8万人测过"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 右侧图片 -->
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_1"
            android:background="@drawable/bg_round_image"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>